<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rviannaoliveira.deeplink.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Deeplink"
        android:name="com.rviannaoliveira.deeplink.CustomApplication">
        <activity android:name="com.rviannaoliveira.deeplink.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rviannaoliveira.deeplink.AnyAActivity"
            android:exported="true" />
        <activity
            android:name="com.rviannaoliveira.deeplink.AnyBActivity"
            android:exported="true" />

    </application>

</manifest>